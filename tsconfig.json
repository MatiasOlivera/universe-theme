{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "dist", ".vscode"],
  "include": ["src/**/*"]
}
